{% extends 'base.html.twig' %}

{% block title 'MerrymakingTickets' %}

{% block body %}
	<div class="container">
		<h2>
			Nos artistes
			<h2>
				<div class="row flex">
					{% for property in users %}
						<div class="col-3">
							<div class="card">
								<h5 class="card-title">
									<a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">
										{{property.name_users}}
										{{property.firstname_users}}</a>
								</h5>
								<p class="card-text">{{property.phone_number_users}}</p>
								<div class="text-primary">{{property.mail}}</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	{% endblock %}
